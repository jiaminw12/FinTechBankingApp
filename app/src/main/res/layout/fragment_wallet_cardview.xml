<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--<com.vinaygaba.creditcardview.CreditCardView-->
            <!--android:id="@+id/card_example"-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="225dp"-->
            <!--android:background="@drawable/cardbackground_world"-->
            <!--android:layout_marginBottom="16dp"-->
            <!--android:layout_marginTop="16dp"/>-->

        <TextView
            android:id="@+id/title_card_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="24dp"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/title_card_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/title_expiryDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/title_activated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/card_Id"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_activated"/>

        <TextView
            android:id="@+id/card_account_id"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!--<Button-->
            <!--android:id="@+id/button_scan"-->
